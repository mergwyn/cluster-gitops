# bootstrap.env.dev
CLUSTER_NAME="k3s-dev"
K3S_VERSION="v1.34.2+k3s1"
IMAGE="ubuntu:24.04"
MEMORY="4GB"
CPUS="2"
PROFILE="default"

# LXC cluster nodes (space-separated, Bash array compatible)
CLUSTER_NODES="k3s-1 k3s-2 k3s-3"

# API / DNS
API_DNS="api-${CLUSTER_NAME}.$(hostname -d)"

# Token file (optional override)
TOKEN_FILE=".cluster-token"

# Namespace for ArgoCD
ARGOCD_NS="argocd"
