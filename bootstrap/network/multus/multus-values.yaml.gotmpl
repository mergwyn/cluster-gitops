---
# vim: set filetype=yaml:

# hostCNIBinDir: /var/lib/rancher/k3s/data/current/bin
hostCNIBinDir: /var/lib/rancher/k3s/data/cni
hostCNINetDir: /var/lib/rancher/k3s/agent/etc/cni/net.d

args:
  - "--multus-conf-file=auto"
  - "--cni-conf-dir={{`{{ .Values.CNIMountPath }}`}}/etc/cni/net.d"
  - "--multus-cni-conf-dir={{`{{ .Values.CNIMountPath }}`}}/etc/cni/net.d"
  - "--cni-bin-dir={{`{{ .Values.CNIMountPath }}`}}/opt/cni/bin"
  - "--multus-kubeconfig-file-host=/var/lib/rancher/k3s/agent/etc/cni/net.d/multus.d/multus.kubeconfig"  # Just add this one??
  - "--multus-log-level=debug"

initContainers:
  - name: cni-plugins
    image: rancher/hardened-cni-plugins:v1.6.0-build20241022
    securityContext:
       privileged: true
    volumeMounts:
      - name: cni-bin-dir
        mountPath: /host/opt/cni/bin
    env:
      # SKip everyhting but macvlan and ipvlan
      - name: SKIP_CNI_BINARIES
        value: "bandwidth,bridge,dhcp,firewall,flannel,host-device,host-local,loopback,portmap,ptp,sbr,static,tuning,vlan,vrf"

extraDeploy:
  - apiVersion: k8s.cni.cncf.io/v1
    kind: NetworkAttachmentDefinition
    metadata:
      name: macvlan-static
    spec:
      config: |-
        {
          "cniVersion": "1.0.0",
          "type": "macvlan",
          "master": "br0",
          "name": "macvlan-static",
          "capabilities": { "ips": true },
          "ipam": {
            "type": "host-local",
            "subnet": "10.58.0.0/24",
            "gateway": "10.58.0.1",
            "rangeStart": "10.58.0.210",
            "rangeEnd": "10.58.0.239"
          }
        }

