{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":configMigration",
    "abandonments:recommended",
    ":pinDigestsDisabled",
    "mergeConfidence:all-badges",
    ":separateMultipleMajorReleases"
  ],
  "timezone": "Europe/London",
  "internalChecksFilter": "strict",
  "internalChecksAsSuccess": true,
  "ignorePaths": [
    "disabled/**",
    "archive/**"
  ],
  "helm-values": {
    "managerFilePatterns": [
      "/(^|/).*values.*.yaml(?:\\.gotmpl)?$/"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "5 days"
    },
    {
      "matchDatasources": ["docker"],
      "matchDatasources": ["major"],
      "minimumReleaseAge": "14 days"
    },
    {
      "versioning": "regex:/^(?<major>]d+)].(?<minor>]d+)].(?<patch>]d+)-r(?<build>]]d)-ls(?<revision>.+)$",
      "matchPackageNames": [
        "/^(gh|ls)cr.io\\/linuxserver\\/qbittorrent//"
      ]
    },
    {
      "versioning": "regex:^(?<compatibility>.*)\\.(?<major>.*)\\.(?<minor>.*)\\.(?<patch>.*)$",
      "matchPackageNames": [
        "/^(gh|ls)cr.io\\/linuxserver\\//",
        "/^ghcr.io\\/linuxserver\\/.*\\//"
      ]
    },
    {
      "versioning": "regex:^(?<compatibility>.*)\\.(?<major>.*)\\.(?<minor>.*)\\.(?<patch>.*)$",
      "matchPackageNames": [
        "/^plexinc\\//"
      ]
    },
    {
      "description": "auto merge patches",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "<2025.0.0",
      "automerge": true,
      "ignoreTests": true
    },
    {
      "description": "Auto merge minors and patches",
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "/kube-prometheus-stack/"
      ],
      "ignoreTests": true
    }
  ]
}
