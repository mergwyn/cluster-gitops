{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": ["disabled/**","archive/**"],
  "helm-values": {
    "fileMatch": ["(^|/).*values.*.yaml$"]
  },
  "packageRules": [
    {
      "packagePatterns": ["^ghcr.io\\/linuxserver\\/qbittorrent" ],
      "versionScheme": "regex:/^(?<major>]\d+)]\.(?<minor>]\d+)]\.(?<patch>]\d+)-r(?<build>]]\d)-ls(?<revision>.+)$"
    },
    {
      "packagePatterns": ["^ghcr.io\\/linuxserver\\/", "^ghcr.io\\/linuxserver\\/.*\\/"],
      "versionScheme": "regex:^(?<compatibility>.*)\\.(?<major>.*)\\.(?<minor>.*)\\.(?<patch>.*)$"
    },
    {
      "packagePatterns": ["^plexinc\\/"],
      "versionScheme": "regex:^(?<compatibility>.*)\\.(?<major>.*)\\.(?<minor>.*)\\.(?<patch>.*)$"
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "ignoreTests": true
    }
  ]
}
