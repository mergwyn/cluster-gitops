{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":configMigration",
    ":separateMultipleMajorReleases",
    { "packageRules": [
      {
        "minimumReleaseAge": "7 days",
        "internalChecksFilter": "strict",
      },
    ],}
  ],
  ignorePaths: [
    'disabled/**',
    'archive/**',
  ],
  'helm-values': {
    managerFilePatterns: [
      '/(^|/).*values.*.yaml$/',
    ],
  },
  packageRules: [
    {
      versioning: 'regex:/^(?<major>]d+)].(?<minor>]d+)].(?<patch>]d+)-r(?<build>]]d)-ls(?<revision>.+)$',
      matchPackageNames: [
        '/^(gh|ls)cr.io\\/linuxserver\\/qbittorrent//',
      ],
    },
    {
      versioning: 'regex:^(?<compatibility>.*)\\.(?<major>.*)\\.(?<minor>.*)\\.(?<patch>.*)$',
      matchPackageNames: [
        '/^(gh|ls)cr.io\\/linuxserver\\//',
        '/^ghcr.io\\/linuxserver\\/.*\\//',
      ],
    },
    {
      versioning: 'regex:^(?<compatibility>.*)\\.(?<major>.*)\\.(?<minor>.*)\\.(?<patch>.*)$',
      matchPackageNames: [
        '/^plexinc\\//',
      ],
    },
    {
      description: 'auto merge patches',
      matchUpdateTypes: [
        'patch',
      ],
      matchCurrentVersion: '!/^0/',
      automerge: true,
      ignoreTests: true,
    },
    {
      description: 'Auto merge KPS minors and patches',
      matchDatasources: [
        'helm',
        'docker',
      ],
      automerge: true,
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchDepNames: [
        'kube-prometheus-stack',
      ],
      ignoreTests: true,
    },
  ],
}
